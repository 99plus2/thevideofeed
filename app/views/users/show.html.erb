<div class="grid_9">

  <h2><%= @user %></h2>

  <div id="videos">
    <%= render @posts %>
  </div>

  <div id="pageless"></div>
  <%= will_paginate @posts %>
  <%= pageless @posts.total_pages, user_path(@user) %>

</div>

<div class="grid_3">

  <div id="follow">
    <%= render 'users/follow', :user => @user %>
  </div>
  
  <p><%= link_to "view #{@user}'s feed", user_feed_path(@user) %></p>

</div>
